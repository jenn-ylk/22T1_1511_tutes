// A program that uses fgets to take in a string from the user, 
// and then echo that value twice

#include <stdio.h>

#define SIZE 4096

int secret_function(char *word) {
    int i = 0;
    int result = 0;
    while (word[i] != '\0') {
        if (word[i] >= 'a' && word[i] <= 'z') {
            result++;
        }
        i++;
    }
    return result;
}

int main(void) {
    // initialise string
    char word[SIZE];
    // {'h', 'e', 'l', 'l', 'o', '\0'}
    
    // TODO: use fgets to take in a string, then print it twice

    return 0;
}
